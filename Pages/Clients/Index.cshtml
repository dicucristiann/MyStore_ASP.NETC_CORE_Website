@page
@model PostgreSQL.Data.IndexModel
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>List of Clients</title>
 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        
        .table-container {
            margin-top: 20px;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>List of Clients</h2>
        <a class="btn btn-primary btn-sm" href="/Clients/Create">New Client</a>

        <div class="table-container">
            <table class="table table-bordered table-hover">
                <thead class="thead-light">
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Created At</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var client in Model.ListClients)
                    {
                        <tr>
                            <td>@client.Id</td>
                            <td>@client.Name</td>
                            <td>@client.Email</td>
                            <td>@client.Phone</td>
                            <td>@client.Address</td>
                            <td>@client.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <!-- Implementeam butoanele -->
                            <td>
                                <a class="btn btn-primary btn-sm" asp-page="./Edit" asp-route-id="@client.Id" class="btn btn-primary">Edit</a>
                                <a class="btn btn-danger btn-sm" asp-page="./Delete" asp-route-id="@client.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Adaugă scripturile Bootstrap sau orice alt framework JS pe care îl folosești -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
